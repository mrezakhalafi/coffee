<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.home.HomeFragment"
    android:paddingBottom="70dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/flPromo"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/gradient_background"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textColor="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/sora_regular"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/tvJakarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jakarta"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tvLocation"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/sora_regular"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dropdown_icon"
            android:layout_margin="@dimen/activity_horizontal_margin_small"
            app:layout_constraintTop_toTopOf="@+id/tvJakarta"
            app:layout_constraintLeft_toRightOf="@+id/tvJakarta"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvJakarta"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/search_icon"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="5"
                android:hint="Search coffee"
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"/>

    <!--        <SearchView-->
    <!--            android:layout_width="0dp"-->
    <!--            android:layout_height="60dp"-->
    <!--            android:layout_weight="5"-->
    <!--            android:iconifiedByDefault="false"-->
    <!--            android:queryHint="Search"-->
    <!--            android:searchIcon="@drawable/search_icon"-->
    <!--            android:textColorHint="@color/white"-->
    <!--            android:background="@drawable/search_input"-->
    <!--            android:outlineAmbientShadowColor="@color/white"/>-->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/activity_horizontal_margin_small"
                android:background="@drawable/main_square">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:src="@drawable/filter_icon"
                    android:layout_gravity="center" />
            </FrameLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/ivPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/promo"
            app:layout_constraintTop_toBottomOf="@+id/flPromo"
            android:layout_marginTop="-80dp"/>

        <HorizontalScrollView
            android:id="@+id/hsvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin_small"
            app:layout_constraintTop_toBottomOf="@+id/ivPromo"
            android:paddingTop="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAllCoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_coffee"
                android:background="@drawable/main_square"
                android:textColor="@color/white"
                android:padding="@dimen/activity_horizontal_margin_small"
                android:layout_margin="@dimen/activity_horizontal_margin_small"
                android:fontFamily="@font/sora_bold"/>

            <TextView
                android:id="@+id/tvMachiato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/machiato"
                android:textColor="@color/black"
                android:padding="@dimen/activity_horizontal_margin_small"
                android:layout_margin="@dimen/activity_horizontal_margin_small"
                android:fontFamily="@font/sora_regular"/>

            <TextView
                android:id="@+id/tvLatte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/latte"
                android:textColor="@color/black"
                android:padding="@dimen/activity_horizontal_margin_small"
                android:layout_margin="@dimen/activity_horizontal_margin_small"
                android:fontFamily="@font/sora_regular"/>

            <TextView
                android:id="@+id/tvAmericano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/americano"
                android:textColor="@color/black"
                android:padding="@dimen/activity_horizontal_margin_small"
                android:layout_margin="@dimen/activity_horizontal_margin_small"
                android:fontFamily="@font/sora_regular"/>

            </LinearLayout>

        </HorizontalScrollView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_margin="@dimen/activity_horizontal_margin_small"
            app:layout_constraintTop_toBottomOf="@+id/hsvCategory">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="7dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/product_1"
                            android:layout_gravity="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="17dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star_icon"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:fontFamily="@font/sora_bold"/>

                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/caffee_mocha"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/sora_bold"
                        android:textSize="16dp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/deep_foam"
                        android:textColor="@color/gray"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="13sp"
                        android:paddingTop="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rp_25"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                            android:fontFamily="@font/sora_bold"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:layout_gravity="center"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/main_square">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:src="@drawable/plus_icon"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="7dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/product_2"
                            android:layout_gravity="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="17dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star_icon"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:fontFamily="@font/sora_bold"/>

                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/flat_white"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/sora_bold"
                        android:textSize="16dp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/espresso"
                        android:textColor="@color/gray"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="13sp"
                        android:paddingTop="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rp_36"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                            android:fontFamily="@font/sora_bold"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:layout_gravity="center"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/main_square">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:src="@drawable/plus_icon"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="7dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/product_3"
                            android:layout_gravity="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="17dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star_icon"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.2"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:fontFamily="@font/sora_bold"/>

                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/spanish_latte"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/sora_bold"
                        android:textSize="16dp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/deep_foam"
                        android:textColor="@color/gray"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="13sp"
                        android:paddingTop="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rp_32"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                            android:fontFamily="@font/sora_bold"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:layout_gravity="center"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/main_square">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:src="@drawable/plus_icon"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="7dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/product_4"
                            android:layout_gravity="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="17dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star_icon"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:fontFamily="@font/sora_bold"/>

                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/black_aren"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/sora_bold"
                        android:textSize="16dp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/espresso"
                        android:textColor="@color/gray"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="13sp"
                        android:paddingTop="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rp_28"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                            android:fontFamily="@font/sora_bold"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:layout_gravity="center"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/main_square">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:src="@drawable/plus_icon"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>